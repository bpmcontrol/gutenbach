#!/usr/bin/perl

# Written by Jessica Hamrick (C) 2010

use strict;
use warnings;

use Net::CUPS;
use Net::CUPS::Destination;

my $usage = "Usage: gbq QUEUE ID\n";

my $q = $ARGV[0];
my $id = $ARGV[1];

if (!$q or !$id) {
    print $usage;
    exit 1
}

my $configpath = "$ENV{'HOME'}/.gutenbach/$q";
if (! -e $configpath) {
    print "Queue '$q' does not exist!\n";
    exit 1;
}

my ($host, $queue);

if (-r $configpath) {
    local $/;
    my $fh;
    open $fh, $configpath;
    eval <$fh>;
}

my $cups = Net::CUPS->new();
$cups->setServer("$host");
my $printer = $cups->getDestination("$queue");
my @jobs = $printer->getJobs(0, 0);

if ($id eq "all") {
    foreach $id(@jobs) {
	$printer->cancelJob($id);
    }
}
elsif ($id eq "current") {
    $id = $jobs[0];
    $printer->cancelJob($id);
}
else {
    $printer->cancelJob($id);
}
